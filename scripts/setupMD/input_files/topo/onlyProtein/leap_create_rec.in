source leaprc.protein.ff14SB
source leaprc.water.tip3p
source leaprc.gaff

set default PBradii mbondi

REC = loadpdb REC_PATH/RECEPTOR_prep.pdb

savepdb REC TOPO_PATH/LIGND_rec.pdb

saveAmberParm REC /TOPO_PATH/LIGND_vac_rec.parm7 /TOPO_PATH/LIGND_vac_rec.crd
charge REC

addIons REC Na+ 0
addions REC Cl- 0

solvatebox REC TIP3PBOX 11.0
savepdb REC /TOPO_PATH/LIGND_solv_com.pdb
saveAmberParm REC /TOPO_PATH/LIGND_solv_com.parm7 /TOPO_PATH/LIGND_solv_com.crd

quit
